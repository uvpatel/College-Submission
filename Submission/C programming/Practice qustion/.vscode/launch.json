{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",

            // ðŸ”° Executable file to debug
            "program": "${workspaceFolder}/nestedloop.exe",

            // ðŸ”° Command-line arguments (leave empty or add if needed)
            "args": [],

            // ðŸ”° Should the debugger stop at main()?
            "stopAtEntry": false,

            // ðŸ”° Set working directory to project folder
            "cwd": "${workspaceFolder}",

            // ðŸ”° Add any environment variables if needed
            "environment": [],

            // ðŸ”° Open an external console (good for C/C++ output)
            "externalConsole": true,

            // ðŸ”° Specify the debugger mode and path
            "MIMode": "gdb",
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe",

            // ðŸ”° GDB Pretty Printing for better variable display
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
